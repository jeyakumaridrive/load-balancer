<html>

<head>

    <link rel="stylesheet" type="text/css" href="style.css">
    <style>
        * {
    font-family: Georgia;
}

a {
    color: #fff;
    text-decoration: none;
}

a:hover {
    text-decoration: none;
}

div.bordered {
    margin: 0 auto;
    margin-top: 100px;
    width: 900px;
    padding: 20px;
    text-align: center;
    border: 10px solid #b3b7e4;
    -webkit-border-radius: 20px;
}

#error {
    background-color: #BA0000;
    color: #fff;
    font-weight: bold;
}

#participant {
    font-size: 20pt;
}

#participant input {
    font-size: 20pt;
    padding: 10px;
    margin: 0 10px;
}

#participant span.join {
    padding: 10px;
    background-color: #8895d6;
    -webkit-border-radius: 10px;
}

#chat {
    margin-top: 100px;
    height: 480 px;
    position: relative;
}

#chat div#descr {
    position: absolute;
    left: -10px;
    top: -190px;
    font-size: 13px;
    text-align: left;
    line-height: 20px;
    padding: 5px;
    width: 630px;
}

div#msgs {
    overflow-y: scroll;
    height: 400px;
}

div#msgs ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
}

div#msgs li {
    line-height: 20px;
}

div#msgs li span.user {
    color: #ff9900;
}

div#msgs li span.user.self {
    color: #aa2211;
}

div#msgs li span.time {
    float: right;
    margin-right: 5px;
    color: #aaa;
    font-family: "Courier New";
    font-size: 12px;
}

div#msgs li.control {
    text-align: center;
}

div#msgs li.control span.message {
    color: #aaa;
}

div#input {
    text-align: left;
    margin-top: 20px;
}

div#input #message {
    width: 820px;
    border: 5px solid #bbb;
    -webkit-border-radius: 3px;
    font-size: 20pt;
}
    </style>

    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery-json/2.6.0/jquery.json.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/datejs/1.0/date.min.js'></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="chat.js"></script>

</head>

<body>
    <div id="participant" class="bordered" style="display: none;">
        <input type="text" id="name" placeholder="Name..." /> <a href="#"><span class="join">Join</span></a>
    </div>
    <div id="chat" class="bordered" style="display: none;">
        <div id="msgs">
            <ul>
                <li class="message" style="display: none">
                    <span class="user"></span><span class="message"></span>
                    <span class="time"></span>
                </li>
                <li class="control" style="display: none">
                    <span class="user"></span>&nbsp;<span class="message"></span>
                    <span class="time"></span>
                </li>
            </ul>
        </div>
        <div id="input">
            <form><input type="text" id="message" /></form>
        </div>
    </div>
</body>

</html>